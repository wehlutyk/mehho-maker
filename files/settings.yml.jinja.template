# Sudo
sudo:
  groups:
    admin: ALL=(ALL) ALL

# Nginx
nginx:
  vhosts:
    {{ grains['domain'] }}:
      cert: {{ grains['domain'] }}-cacert.crt
      key: {{ grains['fqdn'] }}.key

# Postfix
postfix:
  cert: mail.{{ grains['domain'] }}-cacert.crt
  key: {{ grains['fqdn'] }}.key
  rootaliasgroup: admin

# Mailman
mailman:
  lists_host: lists
  # CHANGEME
  site_pass: site_pass
  # CHANGEME
  sitelist_pass: sitelist_pass
  # CHANGEME
  creator_pass: creator_pass

# Dyndns
dyndns:
  credentials:
    www.ovh.com:
      {{ grains['domain'] }}-{{ grains['host'] }}: pass
  domains:
    {{ grains['fqdn'] }}:
      server: www.ovh.com
      username: {{ grains['domain'] }}-{{ grains['host'] }}
    lists.{{ grains['domain'] }}:
      server: www.ovh.com
      username: {{ grains['domain'] }}-{{ grains['host'] }}
    {{ grains['domain'] }}:
      server: www.ovh.com
      username: {{ grains['domain'] }}-{{ grains['host'] }}

# Dovecot
dovecot:
  cert: mail.{{ grains['domain'] }}-cacert.crt
  key: {{ grains['fqdn'] }}.key

# Roundcube
roundcube:
  version: 0.8.5
  baseurl: /mail

# OwnCloud
owncloud:
  version: 5.0.12
  baseurl: /nuage

# Etherpad
etherpad:
  baseurl: /pads
  # CHANGEME
  admin_pass: admin_pass

# Prosody
prosody:
  cert: {{ grains['domain'] }}-cacert.crt
  key: {{ grains['fqdn'] }}.key
  conference_host: conference
